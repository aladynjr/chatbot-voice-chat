{
  "manifest_version": 3,
  "name": "ChatGPT Logger",
  "version": "1.1",
  "description": "Logs ChatGPT conversations and converts them to speech",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://elevenlabs.io/*",
    "https://api.elevenlabs.io/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["interceptor.js"],
    "matches": ["https://chatgpt.com/*"]
  }],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 